<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_mdb_ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/txt_vmc_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_mdb_ver"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_prompts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_start_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="startService"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:visibility="gone" />
        <Button
            android:id="@+id/btn_setDemoMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="setDemoMode"
            android:visibility="gone"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_set_enable_mdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="setEnableMdb"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_get_enable_mdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="getEnableMdb"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_demo"
        android:visibility="gone"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_start_detect_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="startDetectCard"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_start_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="startTrans"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_dispense_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dispenseFail"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_dispense_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dispenseSucc"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_finish_vending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="finishVending"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="startRefund"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_terminate_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VMC Terminate Trans"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_allow_terminate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show Allow Terminate Dlg"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:visibility="visible" />
    </LinearLayout>


</RelativeLayout>